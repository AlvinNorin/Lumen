	public static int find(String name) {
		int counter = 0;
		org.newdawn.slick.opengl.Texture Tex = null;
		while (name!=tex_name[counter]&&counter<=textures) {
			counter++;
		} if (texture_index[counter] != null) {
			Tex=texture_index[counter];
		} else {
			System.out.println("Texture "+name+" not found!");
		}
		return Tex;
	}
	
	public static void update(int state) {
		boolean True = false;
		if (state == 1) {
			update = true;
			True = true;
		} else if (state == 2) {
			if (update == true) {
				True = true;
			}
		} else if (state == 0) {
			update = false;
		} if (True) {
			
		}
	}
	
}
