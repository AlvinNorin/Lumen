package menu;

import GUI.Button;
import game.Text;

/**
 * @author Alvin
 */
public class Main {
	
	static boolean load = false;
	
	public static void update() {
		if (!load) {
			load();
		}
		FB.update();
		Settings.upda																																																																																																																																																																																																																																																								te();
		singleplayer.Dev.update();
	}
	
	public static void load() {
		GUI.MenuWork.Load();
		Button.loadTextures();
		Text.load();
		GUI.Texture.load("dirt", "PNG", "res/textures/dirt.png");
		load = true;
	}
	
}
